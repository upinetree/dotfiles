{
  "env": {
    "CLAUDECODE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "WebFetch(domain:github.com)",
      "Bash(bundle show:*)",
      "Bash(bundle exec rspec:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)",
      "Bash(diskutil:*)",
      "Bash(dd:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(chgrp:*)",
      "Bash(launchctl:*)",
      "Bash(umount:*)",
      "Bash(nvram:*)",
      "Bash(sh:*)",
      "Bash(bash:*)",
      "Bash(zsh:*)",
      "Bash(brew:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(git config:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(mise.local.toml)",
      "Read(.mise.local.toml)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(*.key)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"asking...\" with title \"Claude Code\" sound name \"Submarine\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"done!\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".rb\") or endswith(\".rake\"))' | xargs -r bundle exec rubocop -A"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".md\"))' | xargs -r prettier --write"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".rb\") or endswith(\".rake\"))' >> ~/.claude/recently_edited_files.txt"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
